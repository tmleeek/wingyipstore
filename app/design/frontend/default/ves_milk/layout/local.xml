<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <!--
    <default>
        <remove name="catalog.leftnav" />
    </default>
 -->
    <cms_index_index>  
    <reference name="massbottom">  
        <block type="cms/block" name="ves-massbottom" before="-">
            <action method="setBlockId"><block_id>category-banner</block_id></action>
        </block>
    </reference>
    
    </cms_index_index> 
    
    <contacts_index_index> 
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </contacts_index_index>

    <blog_index_index>
        
        <remove name="right.poll" />
    </blog_index_index>
    <blog_list_show>
        
        <remove name="right.poll" />
    </blog_list_show>
    <blog_post_view>
        
        <remove name="right.poll" />
    </blog_post_view>
    <blog_category_view>
        
        <remove name="right.poll" />
    </blog_category_view> 
    <catalog_category_default translate="label">
        <label>Catalog Category (Non-Anchor)</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="left">
            <block type="core/text_list" name="catalog.left" as="left" translate="label">
                <label>Right Column</label>
            </block>   
        </reference> 
       
        <reference name="left">
        </reference> 
    </catalog_category_default>

    <catalog_category_layered translate="label">
       <label>Catalog Category (Anchor)</label>
       <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="left">
            <block type="core/text_list" name="catalog.left" as="left" translate="label">
                <label>Right Column</label>
            </block>  
        </reference>
       
        <reference name="left">
        </reference>
    </catalog_category_layered>
    <customer_account>
        <!-- Mage_Tag -->
        <remove name="ves.verticalmenu" />
        <remove name="productcarousel2.list" />
        <remove name="sale.reorder.sidebar"/> 
        <remove name="cart_sidebar" />
        <remove name="catalog.compare.sidebar" />
        
    </customer_account>
    <catalogsearch_result_index>
        <remove name="ves.verticalmenu" />
    </catalogsearch_result_index>
    
    
    <newsletter_manage_index translate="label"> 
        <reference name="content"> 
            <block type="customer/newsletter" name="customer_newsletter">
                <block type="page/html_wrapper" name="customer.newsletter.form.before" as="form_before" translate="label">
                    <label>Newsletter Subscription Form Before</label>
                    <action method="setMayBeInvisible"><value>1</value></action>
                </block>
            </block>
        </reference>
    </newsletter_manage_index>
</layout>