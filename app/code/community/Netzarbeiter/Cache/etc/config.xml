<config>
	<modules>
		<Netzarbeiter_Cache>
			<version>0.0.5</version>
		</Netzarbeiter_Cache>
	</modules>
	<global>
		<helpers>
			<netzarbeiter_cache>
				<class>Netzarbeiter_Cache_Helper</class>
			</netzarbeiter_cache>
		</helpers>
		<blocks>
			<netzarbeiter_cache>
				<class>Netzarbeiter_Cache_Block</class>
			</netzarbeiter_cache>
		</blocks>
	</global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<Netzarbeiter_Cache before="Mage_Adminhtml">Netzarbeiter_Cache_Adminhtml</Netzarbeiter_Cache>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<netzarbeiter_cache>
					<file>netzarbeiter/cache.xml</file>
				</netzarbeiter_cache>
			</updates>
		</layout>
	</adminhtml>
	<phpunit>
		<suite>
			<modules>
				<Netzarbeiter_Cache/>
			</modules>
		</suite>
	</phpunit>
</config>