<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <NBSSystem_Nitrogento>
            <version>1.2.21</version>
        </NBSSystem_Nitrogento>
    </modules>
    <global>
        <cache>
            <types>
                <fullpage>
                    <label>Nitrogento Fullpage Cache</label>
                    <description>Nitrogento Fullpage Cache</description>
                    <tags>FULLPAGE</tags>
                </fullpage>
            </types>
        </cache>
        <blocks>
            <nitrogento>
                <class>NBSSystem_Nitrogento_Block</class>
            </nitrogento>
        </blocks>
        <helpers>
            <nitrogento>
                <class>NBSSystem_Nitrogento_Helper</class>
            </nitrogento>
        </helpers>
        <models>
            <nitrogento>
                <class>NBSSystem_Nitrogento_Model</class>
                <resourceModel>nitrogento_mysql4</resourceModel>
            </nitrogento>
            <nitrogento_mysql4>
                <class>NBSSystem_Nitrogento_Model_Mysql4</class>
                <entities>
                    <cache_blockhtml_config><table>cache_blockhtml_config</table></cache_blockhtml_config>
                    <cache_blockhtml_learning><table>cache_blockhtml_learning</table></cache_blockhtml_learning>
                    <cache_fullpage_config><table>cache_fullpage_config</table></cache_fullpage_config>
                </entities>
            </nitrogento_mysql4>
        </models>
        <resources>
            <nitrogento_setup>
                <setup>
                    <module>NBSSystem_Nitrogento</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </nitrogento_setup>
            <nitrogento_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </nitrogento_write>
            <nitrogento_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </nitrogento_read>
        </resources>
        <events>
            <controller_front_init_routers>
                <observers>
                    <nitrogento_observer_7>
                        <class>nitrogento/observer</class>
                        <method>saveStoremap</method>
                    </nitrogento_observer_7>
                </observers>
            </controller_front_init_routers>
            <sales_order_place_after>
                <observers>
                    <nitrogento_cache_observer_9>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanOrderItemsCache</method>
                    </nitrogento_cache_observer_9>
                </observers>
            </sales_order_place_after>
            <cataloginventory_stock_item_save_before>
                <observers>
                    <nitrogento_cache_observer_12>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanStockItemCache</method>
                    </nitrogento_cache_observer_12>
                </observers>
            </cataloginventory_stock_item_save_before>
            <cataloginventory_stock_item_save_after>
                <observers>
                    <nitrogento_cache_observer_13>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanStockItemCache</method>
                    </nitrogento_cache_observer_13>
                </observers>
            </cataloginventory_stock_item_save_after>
            <core_collection_abstract_load_after>
                <observers>
                    <nitrogento_optimization_observer_3>
                        <class>nitrogento/optimization_observer</class>
                        <method>handleNitrogentoIndexUrlActivation</method>
                    </nitrogento_optimization_observer_3>
                </observers>
            </core_collection_abstract_load_after>
        </events>
        <index>
            <indexer>
                <nitrogento_catalog_url>
                    <model>nitrogento/optimization_indexer_url</model>
                </nitrogento_catalog_url>
            </indexer>
        </index>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <nitrogento before="Mage_Adminhtml">NBSSystem_Nitrogento_Adminhtml</nitrogento>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <nitrogento>
                    <file>nitrogento.xml</file>
                </nitrogento>
            </updates>
        </layout>
        <translate>
            <modules>
                <NBSSystem_Nitrogento>
                    <files>
                        <default>NBSSystem_Nitrogento.csv</default>
                    </files>
                </NBSSystem_Nitrogento>
            </modules>
        </translate>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <nitrogento_observer_1>
                        <class>nitrogento/observer</class>
                        <method>addProductDeleteCacheMassAction</method>
                    </nitrogento_observer_1>
                    <nitrogento_observer_2>
                        <class>nitrogento/observer</class>
                        <method>addCategoryDeleteCacheAction</method>
                    </nitrogento_observer_2>
                </observers>
            </adminhtml_block_html_before>
            <controller_action_predispatch>
                <observers>
                    <nitrogento_observer_3>
                        <class>nitrogento/observer</class>
                        <method>validateLicenceKey</method>
                    </nitrogento_observer_3>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <nitrogento_cache_observer_3>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanNitrogentoCache</method>
                    </nitrogento_cache_observer_3>
                    <nitrogento_core_storemap_4>
                        <class>NBSSystem_Nitrogento_Model_Core_Storemap</class>
                        <method>delete</method>
                    </nitrogento_core_storemap_4>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <cms_page_save_after>
                <observers>
                    <nitrogento_cache_observer_14>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanCmsPageCache</method>
                    </nitrogento_cache_observer_14>
                </observers>
            </cms_page_save_after>
            <cms_page_delete_after>
                <observers>
                    <nitrogento_cache_observer_15>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanCmsPageCache</method>
                    </nitrogento_cache_observer_15>
                </observers>
            </cms_page_delete_after>
            <catalog_product_save_after>
                <observers>
                    <nitrogento_cache_observer_4>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanProductCategoriesCache</method>
                    </nitrogento_cache_observer_4>
                </observers>
            </catalog_product_save_after>
            <catalog_product_delete_after>
                <observers>
                    <nitrogento_cache_observer_5>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanProductCategoriesCache</method>
                    </nitrogento_cache_observer_5>
                </observers>
            </catalog_product_delete_after>
            <catalog_category_save_after>
                <observers>
                    <nitrogento_cache_observer_6>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanCategoryCache</method>
                    </nitrogento_cache_observer_6>
                </observers>
            </catalog_category_save_after>
            <catalog_category_delete_after>
                <observers>
                    <nitrogento_cache_observer_7>
                        <class>nitrogento/cache_observer</class>
                        <method>cleanCategoryCache</method>
                    </nitrogento_cache_observer_7>
                </observers>
            </catalog_category_delete_after>
            <store_save_after>
                <observers>
                    <nitrogento_core_storemap_2>
                        <class>NBSSystem_Nitrogento_Model_Core_Storemap</class>
                        <method>delete</method>
                    </nitrogento_core_storemap_2>
                </observers>
            </store_save_after>
            <store_delete_after>
                <observers>
                    <nitrogento_core_storemap_3>
                        <class>NBSSystem_Nitrogento_Model_Core_Storemap</class>
                        <method>delete</method>
                    </nitrogento_core_storemap_3>
                </observers>
            </store_delete_after>
            <controller_action_postdispatch_adminhtml_compiler_process_run>
            	<observers>
                    <nitrogento_core_storemap_3>
                        <class>NBSSystem_Nitrogento_Model_Core_Storemap</class>
                        <method>delete</method>
                    </nitrogento_core_storemap_3>
                </observers>
            </controller_action_postdispatch_adminhtml_compiler_process_run>
        </events>
        <menu>
            <system>
                <children>
                    <nitrogento>
                        <title>Nitrogento</title>
                        <sort_order>91</sort_order>
                        <children>
                            <cache translate="title">
                                <title>Cache</title>
                                <sort_order>1</sort_order>
                                <children>
                                    <blockhtml_config translate="title">
                                        <title>Blockhtml</title>
                                        <action>adminhtml/cache_blockhtml_config</action>
                                    </blockhtml_config>
                                    <fullpage_config translate="title">
                                        <title>Fullpage</title>
                                        <action>adminhtml/cache_fullpage_config</action>
                                    </fullpage_config>
                                </children>
                            </cache>
                            <htaccess_config>
                                <title>Htaccess</title>
                                <action>adminhtml/htaccess_config</action>
                                <sort_order>10</sort_order>
                            </htaccess_config>
                        </children>
                    </nitrogento>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <nitrogento>
                                    <title>Nitrogento</title>
                                    <children>
                                        <cache translate="title">
                                            <title>Cache</title>
                                            <sort_order>1</sort_order>
                                            <children>
                                                <blockhtml_config translate="title">
                                                    <title>Blockhtml</title>
                                                </blockhtml_config>
                                                <fullpage_config translate="title">
                                                    <title>Fullpage</title>
                                                </fullpage_config>
                                            </children>
                                        </cache>
                                        <htaccess_config translate="title">
                                            <title>Htaccess</title>
                                            <sort_order>10</sort_order>
                                        </htaccess_config>
                                    </children>
                                </nitrogento>
                                <config>
                                    <children>
                                        <nitrogento translate="title">
                                            <title>Nitrogento</title>
                                            <sort_order>53</sort_order>
                                        </nitrogento>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <nitrogento_cache_blockhtml_observer_1>
                        <type>singleton</type>
                        <class>nitrogento/cache_blockhtml_observer</class>
                        <method>startTimer</method>
                    </nitrogento_cache_blockhtml_observer_1>
                    <nitrogento_cache_blockhtml_observer_2>
                        <type>singleton</type>
                        <class>nitrogento/cache_blockhtml_observer</class>
                        <method>handleBlockhtmlCache</method>
                    </nitrogento_cache_blockhtml_observer_2>
                    <nitrogento_cache_blockhtml_observer_6>
                        <type>singleton</type>
                        <class>nitrogento/cache_blockhtml_observer</class>
                        <method>replaceSessionFormKeyByPlaceholder</method>
                    </nitrogento_cache_blockhtml_observer_6>
                </observers>
            </core_block_abstract_to_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <nitrogento_cache_blockhtml_observer_4>
                        <type>singleton</type>
                        <class>nitrogento/cache_blockhtml_observer</class>
                        <method>addBlockInLearningMode</method>
                    </nitrogento_cache_blockhtml_observer_4>
                    <nitrogento_optimization_observer_4>
                        <class>nitrogento/optimization_observer</class>
                        <method>changeAbsoluteUrlsInMergedCss</method>
                    </nitrogento_optimization_observer_4>
                    <nitrogento_cache_blockhtml_observer_7>
                        <type>singleton</type>
                        <class>nitrogento/cache_blockhtml_observer</class>
                        <method>restoreSessionFormKeyFromPlaceholder</method>
                    </nitrogento_cache_blockhtml_observer_7>
                    <nitrogento_cache_blockhtml_observer_8>
                        <type>singleton</type>
                        <class>nitrogento/cache_blockhtml_observer</class>
                        <method>restoreSessionFormKeyInBlockHtml</method>
                    </nitrogento_cache_blockhtml_observer_8>
                </observers>
            </core_block_abstract_to_html_after>
            <controller_action_layout_load_before>
                <observers>
                    <nitrogento_observer_6>
                        <class>nitrogento/observer</class>
                        <method>disableReportsProductDisplay</method>
                    </nitrogento_observer_6>
                    <nitrogento_cache_fullpage_cookie_1>
                        <class>nitrogento/cache_fullpage_cookie</class>
                        <method>setNitrogentoCacheFullpage</method>
                        <type>singleton</type>
                    </nitrogento_cache_fullpage_cookie_1>
                    <nitrogento_observer_4>
                        <class>nitrogento/observer</class>
                        <method>disableCatalogSessionMemorizeParams</method>
                    </nitrogento_observer_4>
                    <nitrogento_optimization_observer_1>
                        <class>nitrogento/optimization_observer</class>
                        <method>addSpriteCss</method>
                    </nitrogento_optimization_observer_1>
                </observers>
            </controller_action_layout_load_before>
            <controller_action_postdispatch>
                <observers>
                    <nitrogento_optimization_observer_2>
                        <type>singleton</type>
                        <class>nitrogento/optimization_observer</class>
                        <method>observeHtml</method>
                    </nitrogento_optimization_observer_2>
                    <nitrogento_cache_fullpage_observer_6>
                    	<class>nitrogento/cache_fullpage_observer</class>
                        <method>ensureFormKeyPlaceholder</method>
                        <type>singleton</type>
                    </nitrogento_cache_fullpage_observer_6>
                    <nitrogento_cache_fullpage_observer_5>
                        <class>nitrogento/cache_fullpage_observer</class>
                        <method>handleFullpageCache</method>
                        <type>singleton</type>
                    </nitrogento_cache_fullpage_observer_5>
                    <nitrogento_observer_8>
                    	<class>nitrogento/observer</class>
                        <method>restoreFormKeyFromPlaceholder</method>
                        <type>singleton</type>
                    </nitrogento_observer_8>
                    <nitrogento_cache_fullpage_cookie_2>
                        <class>nitrogento/cache_fullpage_cookie</class>
                        <method>sendCookie</method>
                        <type>singleton</type>
                    </nitrogento_cache_fullpage_cookie_2>
                </observers>
            </controller_action_postdispatch>
            <controller_action_predispatch>
                <observers>
                    <nitrogento_observer_5>
                        <class>nitrogento/observer</class>
                        <method>ensureFormKey</method>
                        <type>singleton</type>
                    </nitrogento_observer_5>
                </observers>
            </controller_action_predispatch>
        </events>
        <layout>
            <updates>
                <nitrogento>
                    <file>nitrogento.xml</file>
                </nitrogento>
            </updates>
        </layout>
    </frontend>
    <crontab>
        <jobs>
            <nitrogento_clean_old_cache_entries>
                <schedule><cron_expr>0 */2 * * *</cron_expr></schedule>
                <run><model>nitrogento/cache_observer::cleanOldCacheEntries</model></run>
            </nitrogento_clean_old_cache_entries>
            <nitrogento_crawl_main_website_pages>
                <schedule><cron_expr>0 */2 * * *</cron_expr></schedule>
                <run><model>nitrogento/cache_observer::crawlMainWebsitePages</model></run>
            </nitrogento_crawl_main_website_pages>
        </jobs>
    </crontab>
</config>