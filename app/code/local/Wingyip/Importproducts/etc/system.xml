<config>
    <tabs>
        <wingyip translate="label" module="importproducts">
            <label>Wingyip</label>
            <sort_order>200</sort_order>
        </wingyip>
    </tabs>
    <sections>
        <importproducts>
            <class>separator-top</class>
            <label>Import Products</label>
            <tab>wingyip</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <importproducts translate="label comment" module="importproducts">
                    <label>Ftp Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <host translate="label">
                            <label>Ftp host</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Define Ftp host eg 102.36.45.65</comment>
                        </host>
                        <user_name translate="label">
                            <label>Ftp username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Define Ftp user name</comment>
                        </user_name>
                        <password translate="label">
                            <label>Ftp Password</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Define ftp password</comment>
                        </password>
                        <port translate="label">
                            <label>Ftp Port</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Define FtpPort</comment>
                        </port>
                        <directoy_path translate="label">
                            <label>Directory Path for file</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </directoy_path>
                        <move_to translate="label">
                            <label>Move to Folder</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </move_to>
                    </fields>
                </importproducts>

                <general translate="label comment" module="importproducts">
                    <label>Admin Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <adminemail translate="label">
                            <label>Admin Notify Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Admin Notification email. Add comma (,) for multiple email address.</comment>
                        </adminemail>

                    </fields>
                </general>

            </groups>
        </importproducts>
    </sections>
</config>
