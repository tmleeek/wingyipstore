<?xml version="1.0"?>
<config>
    <modules>
        <Wingyip_Irishosted>
            <version>0.0.1</version>
        </Wingyip_Irishosted>
    </modules>
    <global>
        <blocks>
            <irishosted>
				<class>Wingyip_Irishosted_Block</class>
			</irishosted>
        </blocks>
        <models>
            <irishosted>
                <class>Wingyip_Irishosted_Model</class>
            </irishosted>
        </models>
        <helpers>
            <irishosted>
                <class>Wingyip_Irishosted_Helper</class>
            </irishosted>
        </helpers>
        <resources>
            <irishosted_setup>
                <setup>
                    <module>Wingyip_Irishosted</module>                </setup>            </irishosted_setup>
        </resources>
    </global>
    <frontend>	
        <translate>
            <modules>
                <Wingyip_Irishosted>
                    <files>
                        <default>Wingyip_Irishosted.csv</default>
                    </files>
                </Wingyip_Irishosted>
            </modules>
        </translate>
		<routers>
			<irishosted>
				<use>standard</use>
				<args>
					<module>Wingyip_Irishosted</module>
					<frontName>irishosted</frontName>
				</args>
			</irishosted>
		</routers>
	</frontend>
	<adminhtml>	
        <translate>
            <modules>
                <Wingyip_Irishosted>
                    <files>
                        <default>Wingyip_Irishosted.csv</default>
                    </files>
                </Wingyip_Irishosted>
            </modules>
        </translate>
		<acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <irishosted translate="title" module="irishosted">
                                            <title>Wingyip IrisHosted Settings</title>
                                        </irishosted>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
	</adminhtml>
    <default>
        <payment>
            <irishosted>
                <active>1</active>
                <model>irishosted/irishosted</model>
                <title>Global Iris Hosted</title>
                <allowspecific>0</allowspecific>
                <is_sandbox_mode>1</is_sandbox_mode>
                <log_request>1</log_request>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
				<hashing_method_type>md5</hashing_method_type>
            </irishosted>
        </payment>
    </default>
</config>
